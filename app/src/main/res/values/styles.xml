<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="BaseBtnTheme" parent="Widget.AppCompat.Button">
		<item name="android:height">@dimen/btn_height</item>
		<item name="android:layout_margin">@dimen/btn_margin</item>
	</style>

	<style name="BtnTheme" parent="BaseBtnTheme">
		<item name="android:background">@color/udacity_color</item>

	</style>

</resources>
